pipeline {
    agent any
    parameters {
           string(name: 'IMAGE_VERSION', defaultValue: '1.1')
    }
    stages {
        stage('Continuous Integration') {
            steps {
                sh '''
                   cd dt-ejb
                   mvn clean install
                   cd ../Rest
                   mvn clean install
                   cd ../web
                   mvn clean install
                   cd ../daytrader-ee6
                   mvn clean install
                   mvn clean verify -Pci-docker
                   docker tag dhvines/daytrader-ee6:1.0-SNAPSHOT daytrader:$IMAGE_VERSION
                   docker save daytrader:$IMAGE_VERSION > /root/dockerImages/daytrader-web/$IMAGE_VERSION/daytrader$IMAGE_VERSION.tar
                   '''
             }
        }
        
    }
}
